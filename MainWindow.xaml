<Window x:Class="GLS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GLS_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <DataGrid SelectionChanged="adat_gird_SelectionChanged" x:Name="adat_gird" HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="480"/>
        <Label Grid.Column="1" Content="Dátum" HorizontalAlignment="Left" Height="25" Margin="5,5,0,0" VerticalAlignment="Top" Width="43"/>
        <TextBox x:Name="datumx" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="5,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Label Grid.Column="1" Content="Név" HorizontalAlignment="Left" Height="25" Margin="5,60,0,0" VerticalAlignment="Top" Width="43"/>
        <TextBox x:Name="nevx" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="0,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Label Grid.Column="1" Content="Csomagok száma" HorizontalAlignment="Left" Height="25" Margin="5,115,0,0" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="csomagx" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="0,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Label Grid.Column="1" Content="Fogyasztás (I/100 km)" HorizontalAlignment="Left" Height="25" Margin="5,170,0,0" VerticalAlignment="Top" Width="135"/>
        <TextBox x:Name="fogyx" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="0,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Label Grid.Column="1" Content="km" HorizontalAlignment="Left" Height="25" Margin="5,225,0,0" VerticalAlignment="Top" Width="43"/>
        <TextBox x:Name="kmx" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="0,247,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Button Grid.Column="1" x:Name="fel" Click="fel_Click" Content="felvitel" HorizontalAlignment="Center" Height="23" Margin="0,272,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Grid.Column="1" x:Name="mod" Click="mod_Click" Content="módosítás" HorizontalAlignment="Center" Height="23" Margin="0,295,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Grid.Column="1" x:Name="ment" Click="ment_Click" Content="mentés" HorizontalAlignment="Center" Height="23" Margin="0,318,0,0" VerticalAlignment="Top" Width="300"/>
        
        



    </Grid>
</Window>
